<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/item_product"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <TextView
        android:text="@string/dialog_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/dialog_product_name"
        android:hint="@string/dialog_product_name"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dialog_product_description"
        android:hint="@string/dialog_product_description"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/dialog_product_button"
        android:layout_marginTop="20dp"
        android:text="@string/dialog_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>